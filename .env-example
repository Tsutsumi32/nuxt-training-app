# コンテナ名
CONTAINER_NAME=nuxt-portfolio

# ポート番号（ホスト側:コンテナ側）
# 開発サーバー用ポート
HOST_PORT=3000
CONTAINER_PORT=3000
# プレビューサーバー用ポート（静的サイトプレビュー用）
PREVIEW_HOST_PORT=3001
PREVIEW_CONTAINER_PORT=3000

# Node.js環境変数
NODE_ENV=development

# Nuxt設定（必要に応じて追加）
# NUXT_HOST=0.0.0.0
# NUXT_PORT=3000

# microCMS設定
# 開発環境: PUBLIC_ プレフィックス付きを使用（.envファイルに設定）
# 本番環境（Cloudflare Pages）: PUBLIC_ プレフィックスなしを使用（環境変数として設定）
PUBLIC_MICROCMS_SERVICE_DOMAIN=your-service-domain
PUBLIC_MICROCMS_API_KEY=your-api-key
# 本番環境用（Cloudflare Pagesで設定）
MICROCMS_SERVICE_DOMAIN=your-service-domain
MICROCMS_API_KEY=your-api-key
